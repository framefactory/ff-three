{
    "compilerOptions": {
        "composite": true,
        "target": "ES6",
        "module": "ES6",
        "experimentalDecorators": true,
        "sourceMap": true,

        "outDir": "built/test",
        "rootDir": "test",

        "baseUrl": ".",
        "paths": {
            "@ff/three/*": [ "source/*" ],
            "@ff/core/*": [ "../ff-core/source/*" ],
            "@ff/browser/*": [ "../ff-browser/source/*" ],
            "@ff/ui/*": [ "../ff-ui/source/*" ]
        }
    },
    "include": [
        "test/**/*"
    ],
    "references": [{
        "path": "tsconfig.json"
    }]
}
